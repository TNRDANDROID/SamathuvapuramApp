<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
   >

    <data>

        <variable
            name="adapter"
            type="com.nic.samathuvapuram.adapter.HouseListAdapter" />
    </data>


  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:clickable="true"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorAccent"
        android:focusable="true"
        tools:ignore="UnusedAttribute">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_layout"
            android:minHeight="@dimen/_53sdp"
            android:layout_toRightOf="@+id/img_layout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-35dp"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@drawable/button_bg_grey"
            android:layout_toEndOf="@+id/img_layout"
            android:layout_marginStart="-35dp">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_25sdp">
            <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:padding="@dimen/_3sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_serial_number_h"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text="House Sl.no"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text=":"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/house_serial_number"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:padding="@dimen/_3sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:id="@+id/current_name_of_the_beneficiary_h"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text="Beneficiary name"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text=":"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/current_name_of_the_beneficiary"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:padding="@dimen/_3sdp"
                    android:id="@+id/current_house_usage_layout"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:id="@+id/current_house_usage_h"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text="Usage of house"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text=":"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/current_house_usage"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:id="@+id/estimate_cost_required_layout"
                    android:padding="@dimen/_3sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:id="@+id/estimate_cost_required_h"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text="Cost estimation"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text=":"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/estimate_cost_required"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:id="@+id/condition_of_house_layout"
                    android:padding="@dimen/_3sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:id="@+id/condition_of_house_h"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text="Condition of house"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:text=":"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:id="@+id/condition_of_house"
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        />


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_online_images"
                    android:gravity="end"
                    android:clickable="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:text="@string/view_image"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/_14sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    />

            </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>


      <RelativeLayout
          android:layout_margin="@dimen/_7sdp"
          android:id="@+id/img_layout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/cornered_border_bg_strong"
          >
          <RelativeLayout
              android:layout_centerInParent="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              >
              <ImageView
                  android:layout_width="@dimen/_40sdp"
                  android:layout_height="@dimen/_40sdp"
                  android:id="@+id/img"
                  android:layout_centerInParent="true"
                  android:src="@drawable/home"
                  android:gravity="center"
                 android:padding="@dimen/_3sdp"
                  android:layout_centerHorizontal="true"/>

          </RelativeLayout>
      </RelativeLayout>



    </RelativeLayout>



</layout>